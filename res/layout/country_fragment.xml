<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:moodsta="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:layout_marginTop="53dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Select one or more countries"
            android:textColor="@color/blue" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            moodsta:cardBackgroundColor="@android:color/transparent"
            moodsta:cardCornerRadius="0dp"
            moodsta:cardElevation="3dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/filterCountries"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:ems="10"
                    android:hint="Search Countries"
                    android:padding="7dp"
                    android:textColor="@color/blue"
                     >

                    <requestFocus />
                </EditText>

                <ListView
                    android:id="@+id/listOfCountries"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView1"
                    android:layout_margin="5dp"
                    android:choiceMode="multipleChoice"
                    android:fastScrollEnabled="true" >
                </ListView>

                <FrameLayout
                    android:id="@+id/confirmButton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="@android:color/holo_blue_dark">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:padding="10dp"
                        android:textColor="@android:color/white"
                        android:text="Confirm Selection" />
                </FrameLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>